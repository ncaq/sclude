{
  "name": "sclude",
  "version": "0.0.0",
  "description": "Sclude is a package intended mainly to bring functions in Prelude of Haskell into TypeScript or JavaScript as methods of standard built in objects",
  "repository": "https://github.com/ncaq/sclude.git",
  "author": "ncaq",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "fix": "prettier --write **/*.ts --list-different && tslint --fix --project .",
    "lint": "prettier **/*.ts --list-different && tslint --project .",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/(?!flycheck)*.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "jest": "24.8.0",
    "prettier": "1.17.1",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "typescript-optional": "2.0.1"
  }
}
